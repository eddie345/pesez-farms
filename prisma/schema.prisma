generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MANAGER
  WORKER
}

model User {
  id               String            @id @default(cuid())
  name             String?
  email            String?           @unique
  password         String?
  role             Role              @default(WORKER)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  eggsProduction   EggsProduction[]
  feedStock        FeedStock[]
  mortalityRecords MortalityRecords[]
}

model EggsProduction {
  id        String   @id @default(cuid())
  quantity  Int
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FeedStock {
  id        String   @id @default(cuid())
  quantity  Float
  type      String
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MortalityRecords {
  id        String   @id @default(cuid())
  count     Int
  cause     String?
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
